package dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;

import connection.DbConnection;

public class JdbcStudentOnClass implements StudentOnClassWork{
	private static final String Q_GET_ALL = "" + "SELECT st.`NAME`,\r\n" + "		re.`subject`,\r\n"
			+ "        re.SCORE\r\n" + "  FROM class cl\r\n" + "  JOIN student st\r\n"
			+ "    ON cl.ID = st.CLASS_ID\r\n" + "  JOIN result re\r\n" + "	ON re.STUDENT_ID = st.ID\r\n"
			+ " WHERE (re.`SUBJECT` = 'Math' AND re.SCORE >= 8) "
			+ "OR  (re.`SUBJECT` = 'Literature' AND re.SCORE >= 8);";

	private Connection connection;
	private Statement st;
	private PreparedStatement pst;
	private ResultSet rs;

	public JdbcStudentOnClass() {
		connection = DbConnection.getConnection();
	}
}
